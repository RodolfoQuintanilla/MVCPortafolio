@{
    ViewData["Title"] = "Contacto";
}

<h1>Formulario de Contacto</h1>

<form asp-controller="Home" asp-action="Contacto">
    <div class="mb-3">
        <label for="nombre" class="from-label">Nombre</label>
        <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Fulano de tal">
    </div>    
    
    <div class="mb-3">
        <label for="email" class="from-label">Email</label>
        <input type="text" class="form-control" id="email" name="email" placeholder="nom@mail.com">
    </div> 

    <div class="mb-3">
        <label for="mensaje" class="from-label">Mensaje</label>
        <textarea class="form-control" id="mensaje" name="mensaje" row="5"> </textarea>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
</form>